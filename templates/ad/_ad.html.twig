  <tr>
    
 
    <div class="card" style="width: 18rem;">
    <a href="{{ url }}">
  <img src="{{ ad.coverImage }}" class="card-img-top" alt="meliodas">
  </a>
  <div class="card-body">
    <a href="{{ url }}">
    <h5 class="card-title">{{ ad.title }}</h5>
    </a>
    <p class="card-text">il y a {{ ad.rooms }} et de prix <strong> {{ad.price}} euro</strong></p>
    <p class="card-text">{{ ad.introduction }}</p>
