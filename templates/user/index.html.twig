{% extends 'base.html.twig' %}

{% block title %}
	PROFIL de
	{{ user.fullName }}
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row">
			<div class="col-3">
				<img src="{{user.picture}}" class="avatar" alt="avatar de {{user.fullName}}">
				<br>
				<span class="badge badge-primary">{{user.ads | length}}
					annonces</span>
			</div>
			<div class="col-9">
				<hl>{{user.fullName}}</hl>
				{% if user is same as (app.user) %}
					<div class="mt-3">
						<a href="{{ path('acount_profile') }}" class="btn btn-primary mr-2 mb-2"></a>MODIFIER MES INFORMATION
						<a href="{{ path('account_password') }}" class="btn btn-primary mr-2 mb-2"></a>MODIFIER Mon MDP
							"
					{% endif %}
				</div>
			</div>

			{{user.description | raw}}

			<hr>

			<hr2>les annonces de
				{{user.fullName}}</h2>

			{% if user.ads | length > 0 %}
				<div class="row">
					{% for ad in user.ads %}
						{% include 'ad/_ad.html.twig' %}

					{% endfor %}
				</div>
			{% else %}
				<div class="alert alert-warning">
					<p>
						<strong>
							{{user.fullName}}</strong>
						n'a pas encore d'annonce sur le site !
					</p>
					<div>
					{% endif %}
				</div>

			{% endblock body %}
