{% extends 'base.html.twig' %}

{% block title %}Connection o site
{% endblock %}
{% block body %}
	<link
	rel="stylesheet" href="/css/login.css">

	<!-- This snippet uses Font Awesome 5 Free as a dependency. You can download it at fontawesome.io! -->

	<div class="container">
		<div class="row">
			<div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
				<div class="card card-signin my-5">
					<div class="card-body">
						<h5 class="card-title text-center">
							<strong>CONNECTER VOUS</strong>
						</h5>

						{% if hasError %}
							<div class="alert alert-danger">veuillez verifier vos donn√©ev
							</div>
						{% endif %}

						<form action="{{ path('account_login') }}" method="post">
							<form class="form-signin">
								<div class="form-label-group">
									<input type="email" name="_username" id="Email" class="form-control" placeholder="Email address" required autofocus>
									<label for="Email">Email address</label>
								</div>

								<div class="form-label-group">
									<input type="password" name="_password" id="Password" class="form-control" placeholder="Password" required>
									<label for="Password">Password</label>
								</div>

								<div class="custom-control custom-checkbox mb-3">
									<input type="checkbox" class="custom-control-input" id="customCheck1">
									<label class="custom-control-label" for="customCheck1">Remember password</label>
								</div>
								<button class="btn btn-success" type="submit">Connexion</button>
								<hr class="my-4">
								<button class="btn btn-lg btn-google btn-block text-uppercase" type="submit">
									<i class="fab fa-google mr-2"></i>
									Sign in with Google</button>
								<button class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit">
									<i class="fab fa-facebook-f mr-2"></i>
									Sign in with Facebook</button>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endblock %}
